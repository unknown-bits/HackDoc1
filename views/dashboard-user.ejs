                                <%=hospital.bloodavail1[i]%>
                            </td>
                            <td>
                                B+
                            </td>
                            <td>
                                <%=hospital.bloodavail2[i]%>
                            </td>
                        <%}%>
                        <%if(i==2){%>
                            <td>
                               O-
                            </td>
                            <td>
                                <%=hospital.bloodavail1[i]%>
                            </td>
                            <td>
                                O+
                            </td>
                            <td>
                                <%=hospital.bloodavail2[i]%>
                            </td>
                        <%}%>
                        <%if(i==3){%>
                            <td>
                                AB-
                            </td>
                            <td>
                                <%=hospital.bloodavail1[i]%>
                            </td>
                            <td>
                                AB+
                            </td>
                            <td>
                                <%=hospital.bloodavail2[i]%>
                            </td>
                        <%}%>
                     </tr>
                    <%}%>
                </table>
            </div>
        </div>

        <div class="col-xl-6 col-lg-12" id="r2">
            <div class="container" id="gen-info">
