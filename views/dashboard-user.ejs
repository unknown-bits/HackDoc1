            <div class="container" id="gen-info">
                <p id="p1">General Information</p>
                <p id="p2"><%=hospital.name%></p>
                <p id="p3"><b>Address : </b><%=hospital.address%></p>
                <p id="p4"><b>Contact-1 : </b><%=hospital.contact1%></p>
