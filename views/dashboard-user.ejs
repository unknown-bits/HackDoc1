<div class="container"> 
    <div class="row">
        <div class="col-xl-6 col-lg-12" id="r1" >
           <div class="container" id="gen-info" >
                <p id="p1">Facilities Available</p>
                <table>
                    <tr>
                        <th>Facility</th>
                        <th>Status</th>
                    </tr>
                    <%for(let i=0;i<hospital.facility.length;i++){%>
                        <%if(i%2!=0){%>
                            <tr class="active-row">
                                <%if(i==1){%> <td>CT SCAN</td> <%}%>
                                <%if(i==3){%> <td>AMBULANCE</td> <%}%>
                                <%if(hospital.facility[i].length==3){%> <td>Yes</td><%}
                                else{%> <td>No</td> <%}%>
                            </tr>
                        <%}else{%>
                            <tr>
                                <%if(i==0){%> <td>ICU</td> <%}%>
                                <%if(i==2){%> <td>PHARMACY</td> <%}%>
                                <%if(i==4){%> <td>BLOOD BANK</td> <%}%>
                                <%if(hospital.facility[i].length==3){%> <td>Yes</td><%}
                                else{%> <td>No</td> <%}%>
                            </tr>
                        <%}%>
                    <%}%>
                </table>
            </div>
        </div>
        <div class="col-xl-6 col-lg-12" id="r1">
            <div class="container" id="gen-info">
                <p id="p1">Availability of Doctors</p>
                <table>
                    <tr>
                        <th>Dept.</th>
                        <th>Status</th>
                    </tr>
                    <%for(let i=0;i<hospital.docavail.length;i++){%>
                        <%if(i%2!=0){%>
                          <tr class="active-row">
                              <%if(i==1){%> <td> NEUROLOGIST </td> <%}%>
                              <%if(i==3){%> <td> SKIN INFECTIONS </td> <%}%>
                              <%if(hospital.docavail[i].length==3){%> <td>Yes</td><%}
                              else{%> <td>No</td> <%}%>
                        </tr>
                        <%}else{%>
                            <tr>
                                <%if(i==0){%> <td> PHYSICIAN </td> <%}%>
                                <%if(i==2){%> <td> CARDIOLOGIST </td> <%}%>
                                <%if(i==4){%> <td> PHYSIOTHERAPIST </td> <%}%>
                                <%if(hospital.docavail[i].length==3){%> <td>Yes</td><%}
                                else{%> <td>No</td> <%}%>
                            </tr>
                        <%}%>
                    <%}%>
                </table>
          </div>
        </div>

    </div>
</div>
<div class="container"> 
    <div class="row">
        <div class="col-xl-6 col-lg-12" id="r2" >
           <div class="container" id="gen-info" >
